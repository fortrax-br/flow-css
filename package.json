{
  "name": "Flow-CSS",
  "version": "1.0.0",
  "main": "index.html",
  "author": "Fortrax",
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "homepage": "https://github.com/fortrax-br/flow-css",
  "scripts": {
    "css-compile": "nodemon --watch src/scss --ext scss --exec \"npm-run-all --parallel css-compile-*\"",
    "css-compile-main": "npx sass src/scss/flowcss.scss:dist/css/flowcss.css",
    "css-compile-grid": "npx sass src/scss/flowcss-grid.scss:dist/css/flowcss-grid.css",
    "css-compile-utilities": "npx sass src/scss/flowcss-utilities.scss:dist/css/flowcss-utilities.css",
    "css-build": "npm-run-all --parallel css-build-*",
    "css-build-main": "postcss --use autoprefixer cssnano -o dist/css/flowcss.min.css dist/css/flowcss.css",
    "css-build-grid": "postcss --use autoprefixer cssnano -o dist/css/flowcss-grid.min.css dist/css/flowcss-grid.css",
    "css-build-utilities": "postcss --use autoprefixer cssnano -o dist/css/flowcss-utilities.min.css dist/css/flowcss-utilities.css",
    "js-watch": "nodemon --watch src/js/src/ --ext js --exec \"npm-run-all js-compile-standalone\"",
    "js-compile": "npm-run-all --parallel js-compile-*",
    "js-compile-standalone": "rollup --environment BUNDLE:false --config build/rollup.config.js --sourcemap",
    "js-compile-standalone-esm": "rollup --environment ESM:true,BUNDLE:false --config build/rollup.config.js --sourcemap",
    "js-compile-bundle": "rollup --environment BUNDLE:true --config build/rollup.config.js --sourcemap"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@rollup/plugin-babel": "^5.2.2",
    "express": "^4.17.1",
    "nodemon": "^2.0.6",
    "rollup": "^2.35.1",
    "rollup-plugin-terser": "^7.0.2",
    "autoprefixer": "^10.0.2",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.7",
    "postcss-cli": "^8.2.0",
    "sass": "^1.29.0"
  }
}
